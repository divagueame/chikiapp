<div id="<%= dom_id message %>">
  <p>
    <strong>Message:</strong>
    <%= message.body %>
  </p>
  <div class="flex">
      <%= button_to "Show this message", message %>
      <%= button_to "Destroy this message", message, method: :delete %>
      <%= button_to "Edit this message", edit_message_path(message), method: :post %> 
    
  </div>
</div>
<style>
.flex {
  display: flex;
  justify-content: center;
  gap: .5rem 
}
</style>